{
    "name": "jeremie-pasquis/rational-number",
    "description": "A type-safe PHP library for precise rational number arithmetic with automatic normalization and percentage operations",
    "type": "library",
    "keywords": ["rational", "fraction", "arithmetic", "math", "precision", "percentage"],
    "license": "MIT",
    "authors": [
        {
            "name": "Jérémie Pasquis"
        }
    ],
    "require": {
        "php": ">=8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.10"
    },
    "scripts": {
        "phpstan": "phpstan analyse -c phpstan.neon",
        "phpstan-baseline": "phpstan analyse -c phpstan.neon --generate-baseline=phpstan-baseline.neon"
    },
    "config": {
        "preferred-install": "dist"
    },
    "autoload": {
        "psr-4": {
            "RationalNumber\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RationalNumber\\Tests\\": "tests/"
        }
    }
}